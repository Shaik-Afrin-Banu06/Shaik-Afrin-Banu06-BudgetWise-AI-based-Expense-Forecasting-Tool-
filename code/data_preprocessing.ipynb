import pandas as pd

# ðŸ“¥ Step 1: Load your Excel file
file_path = r"C:\Users\SHAIK AFRIN BANU\Downloads\Monthly_Summary_2023_2026 (1).xlsx"
df = pd.read_excel(file_path)

# ðŸ§­ Step 2: Display first few rows
print("âœ… Data Loaded Successfully!")
df.head()

# ðŸ§¾ Step 3: Clean column names
df.columns = ['year_month', 'total_income', 'total_expenses', 'net_savings', 'year', 'month']

# ðŸ•’ Step 4: Convert 'year_month' to datetime
df['year_month'] = pd.to_datetime(df['year_month'], format='%Y-%m')

# ðŸ§® Step 5: Sort and check
df = df.sort_values('year_month')

# ðŸ’¾ Step 6: Save cleaned data
df.to_csv("../data/processed_monthly_data.csv", index=False)
print("âœ… Data cleaned and saved successfully to 'data/processed_monthly_data.csv'!")

